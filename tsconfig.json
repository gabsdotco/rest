{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist", "node_modules", "typings"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}